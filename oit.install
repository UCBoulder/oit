/**
 * Add missing manage_webform users.
 */
function oit_update_9000() {
  $usernames = [
    'jonesdr',
    'fast',
    'gewe8216',
    'tiha2368',
    'joca3391',
    'sode2485',
    'aled9463',
    'prte0550',
